  have hK' : IsCompact K' := hk.neg.add isCompact_singleton
  obtain ‚ü®U, U_open, K'U, hU‚ü© : ‚àÉ U, IsOpen U ‚àß K' ‚äÜ U ‚àß IntegrableOn f U Œº :=
    hf.integrableOn_nhds_isCompact hK'
