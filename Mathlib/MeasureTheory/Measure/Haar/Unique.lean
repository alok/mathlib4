    ContinuousOn (fun x ‚Ü¶ ‚à´ y, f x y ‚àÇŒΩ) s := by
  intro q‚ÇÄ hq‚ÇÄ
  have A : ‚àÄ p ‚àà s, Continuous (f p) := fun p hp ‚Ü¶ by
    refine hf.comp_continuous (continuous_const.prod_mk continuous_id') fun x => ?_
    simpa only [prod_mk_mem_set_prod_eq, mem_univ, and_true] using hp
--  have B : ‚àÄ p ‚àà s, tsupport (f p) ‚äÜ k := fun p hp =>
--    closure_minimal (support_subset_iff'.2 fun z hz => hgs _ _ hp hz) h'k
  /- We find a small neighborhood of `{q‚ÇÄ.1} √ó k` on which the function is uniformly bounded.
      This follows from the continuity at all points of the compact set `k`. -/
  obtain ‚ü®w, C, w_open, q‚ÇÄw, hw‚ü© :
    ‚àÉ w C, IsOpen w ‚àß q‚ÇÄ ‚àà w ‚àß ‚àÄ p x, p ‚àà w ‚à© s ‚Üí ‚Äñf p x‚Äñ ‚â§ C := by
    have A : IsCompact ({q‚ÇÄ} √óÀ¢ k) := isCompact_singleton.prod hk
    obtain ‚ü®t, kt, t_open, ht‚ü© :
        ‚àÉ t, {q‚ÇÄ} √óÀ¢ k ‚äÜ t ‚àß IsOpen t ‚àß IsBounded (‚Üøf '' (t ‚à© s √óÀ¢ univ)) := by
      apply exists_isOpen_isBounded_image_inter_of_isCompact_of_continuousOn A _ hf
      simp only [prod_subset_prod_iff, hq‚ÇÄ, singleton_subset_iff, subset_univ, and_self_iff,
        true_or_iff]
    obtain ‚ü®C, Cpos, hC‚ü© : ‚àÉ C, 0 < C ‚àß ‚Üøf '' (t ‚à© s √óÀ¢ univ) ‚äÜ closedBall (0 : E) C :=
      ht.subset_closedBall_lt 0 0
    obtain ‚ü®w, w_open, q‚ÇÄw, hw‚ü© : ‚àÉ w, IsOpen w ‚àß q‚ÇÄ ‚àà w ‚àß w √óÀ¢ k ‚äÜ t
    ¬∑ obtain ‚ü®w, v, w_open, -, hw, hv, hvw‚ü© :
        ‚àÉ (w : Set X) (v : Set Y), IsOpen w ‚àß IsOpen v ‚àß {q‚ÇÄ} ‚äÜ w ‚àß k ‚äÜ v ‚àß w √óÀ¢ v ‚äÜ t
      exact generalized_tube_lemma isCompact_singleton hk t_open kt
      exact ‚ü®w, w_open, singleton_subset_iff.1 hw, Subset.trans (Set.prod_mono Subset.rfl hv) hvw‚ü©
    refine' ‚ü®w, C, w_open, q‚ÇÄw, _‚ü©
    rintro p x ‚ü®hp, hps‚ü©
    by_cases hx : x ‚àà k
    ¬∑ have H : (p, x) ‚àà t := by
        apply hw
        simp only [prod_mk_mem_set_prod_eq, hp, hx, and_true_iff]
      have H' : (p, x) ‚àà (s √óÀ¢ univ : Set (X √ó Y)) := by
        simpa only [prod_mk_mem_set_prod_eq, mem_univ, and_true_iff] using hps
      have : f p x ‚àà closedBall (0 : E) C := hC (mem_image_of_mem _ (mem_inter H H'))
      rwa [mem_closedBall_zero_iff] at this
    ¬∑ have : f p x = 0 := hgs _ _ hps hx
      rw [this]
      simpa only [norm_zero] using Cpos.le
  have I1 :
    ‚àÄ·∂† q : P √ó G in ùìù[s √óÀ¢ univ] q‚ÇÄ,
      AEStronglyMeasurable (fun a : G => L (f a) (g q.1 (q.2 - a))) Œº := by
    filter_upwards [self_mem_nhdsWithin]
    rintro ‚ü®p, x‚ü© ‚ü®hp, -‚ü©
